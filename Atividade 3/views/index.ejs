<!DOCTYPE html>
<html>
    <head>        
        <link rel="stylesheet" href="/styles/bootstrap.min.css">        
        <link rel="stylesheet" href="/styles/style.css">
        <link rel="stylesheet" href="/styles/style.css">
    </head>
    <body>
        <h1>BOLETIM</h1>
        <div class="content">
            <div class="boletim">
                <form method="post" action="/postAluno">
                    <label for="name">Nome:</label>
                    <input type="text" id="name" name="nome" placeholder="Nome do aluno" required>
                    <br>
                    <label>Primeiro semestre:</label>
                    <input type="number" name="primeira" placeholder="Primeira nota" required>
                    <label>Segundo semestre:</label>
                    <input type="number" name="segunda" placeholder="Segunda nota" required>
                    <label>Frequência:</label>
                    <input type="number" name="frequencia" placeholder="Frequência" required>
                    <br>
                    <input type="submit" class="btn btn-primary" value="Enviar">
                </form>
            </div>
            <div class="table">
                <table>
                    <tr>
                        <th>Nome</th>
                        <th>1° semestre</th>
                        <th>2° semestre</th>
                        <th>Nota Final</th>
                        <th>Frequência</th>
                    </tr>
                   
                </table>
            </div>
        </div>
    </body>
